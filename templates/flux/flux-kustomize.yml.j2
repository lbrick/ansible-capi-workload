---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: {{ cluster_name }}-capi
  namespace: flux-system
spec:
  dependsOn:
    name: {{ cluster_name }}-terraform
  interval: 5m0s
  path: ./cluster
  prune: true
  sourceRef:
    kind: GitRepository
    name: {{ cluster_name }}
  targetNamespace: {{ cluster_namespace }}
  timeout: 2m0s
  wait: true